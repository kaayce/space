{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all"
  ],
  "major": {
    "enabled": false
  },
  "updatePinnedDependencies": false,
  "stabilityDays": 2,
  "timezone": "America/Vancouver",
  "schedule": [
    "before 1am on Monday"
  ],
  "rangeStrategy": "bump",
  "ignoreDeps": [
    "node",
    "pnpm"
  ]
}